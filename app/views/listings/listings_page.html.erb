<div class="listing">

<!-- Load icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- The form -->
<form class="example">
  <%= form_tag(listings_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Talent" %>
 <button type="submit"><i class="fa fa-search"></i></button>
</form>
<% end %>







<p id="notice"><%= notice %></p>

  <div class="center">

  <h1>Listings</h1>

    <div class="row">
      <% @listings.each do |listing| %>
            <div class="card listing" style="width:250px">
              <img class="card-img-top" src="img_avatar1.png" alt="Card image">

            <%= link_to image_tag(listing.image_url(:thumb)), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency (listing.price) %></p>
              <p><%= listing.user.name %></p>
            </div>
          </div>
        <% end %>
      </div>


</div>
</div>

<div class="card" style="width:500px">
  <img class="card-img-top" src="img_avatar1.png" alt="Card image">
  <div class="card-img-overlay">
    <h4 class="card-title">John Doe</h4>
    <p class="card-text">Some example text.</p>
    <a href="#" class="btn btn-primary">See Profile</a>
  </div>
</div>
