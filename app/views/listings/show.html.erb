<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <%= image_tag @listing.image_url(:medium) %>
  </div>
    <div class="col-md-6">
      <h3>
        <%= @listing.name %>
      </h3>

      <h5>
        <%= @listing.description %>
      </h5>

      <p>
        <%= number_to_currency (@listing.price) %>
      </p>



      <br>
      <div class="center">
        <%= link_to "Get your Shout", new_listing_order_path(@listing), class: 'btn btn-primary' %>
    </div>

  </div>

<% if current_user == @listing.user %>
  <%= link_to 'Edit', edit_listing_path(@listing) %>
<% end %>
<%= link_to 'Back', listings_path %>
